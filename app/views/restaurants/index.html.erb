<style>
    .image-table {
        width: 200px;
        height: 120px;
    }
    
    td {
        vertical-align: middle;
    }
    
    th {
        color: #0d6efd;;
    }
    
    h1 {
        margin-bottom: 60px;
    }
</style>

<p id="notice"><%= notice %></p>
<div class="text-center">
    <h1>レストラン一覧</h1>

<table class="table w-70" style="margin: 0 auto;">
  <thead>
    <tr>
      <th>レストラン名</th>
      <th>レストランのアドレス</th>
      <th>写真</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.addresss %></td>
      <td>
        <% if restaurant.image.attached? %>
        <%= image_tag restaurant.image, class:"image-table" %>
        <% end %>
      </td>
      <td><%= link_to '詳細', 
          restaurant,
          class: "btn btn-outline-primary btn-sm btn-block" 
        %></td>
      <td><%= link_to '編集', 
          edit_restaurant_path(restaurant),
          class: 'btn btn-outline-warning btn-sm btn-block' 
        %></td>
      <td><%= link_to '削除', 
          restaurant, method: :delete, 
          data: { confirm: 'Are you sure?' },
          class: 'btn btn-outline-danger btn-sm btn-block'
        %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '追加', new_restaurant_path, class:"btn btn-primary"  %>
</div>

